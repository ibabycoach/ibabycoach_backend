  <script>
   document.getElementById("chat-search").addEventListener("input", function () {
  const query = this.value.toLowerCase();
  const users = document.querySelectorAll("#chatList li:not(#no-user-msg)");
  let hasVisible = false;

  users.forEach(user => {
    const name = user.querySelector("h5")?.innerText.toLowerCase() || "";
    if (name.includes(query)) {
      user.style.display = "";
      hasVisible = true;
    } else {
      user.style.display = "none";
    }
  });

  const noUserMsg = document.getElementById("no-user-msg");

  if (query === "") {
    // If search is empty, reset list and hide "No user found"
    users.forEach(user => user.style.display = "");
    noUserMsg.style.display = "none";
  } else {
    // Show "No user found" only if nothing matches
    noUserMsg.style.display = hasVisible ? "none" : "block";
  }

  // Optional: Reset min-height to prevent ugly blank spaces
  const chatList = document.getElementById("chatList");
  chatList.style.minHeight = hasVisible ? "" : "auto";
});

  </script>

