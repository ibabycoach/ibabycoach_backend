  <script>
    let adminID = document.getElementById('adminId');
    adminID = adminID.value;
    var socket = io();

    socket.emit('connect_user', {
      userId: adminID
    });

    socket.emit('chat_list', {
      sender_id: adminID
    });

    socket.on('chat_list', (data) => {

      let chating = document.getElementById('chatList');

      // Keep the 'no-user-msg' element, clear only user list items
      chating.querySelectorAll('li:not(#no-user-msg)').forEach(el => el.remove());

      data.forEach(users => {

        let rId = users.receiver[0]._id == adminID ? users.sender[0]._id : users.receiver[0]._id;

        let userImg = users.receiver[0]._id == adminID ? users.sender[0].image : users.receiver[0].image;
        let imageSrc = userImg ? userImg : '/app-assets/demouser.jpeg';
        const listitem = document.createElement("div")
        listitem.innerHTML = `
                          
        <li id="userId_${rId}" onclick='showChats("${users.sender[0]._id}", "${users.receiver[0]._id}", "${users.receiver[0]._id == adminID ? users.sender[0].name : users.receiver[0].name}", "${users.receiver[0]._id == adminID ? users.sender[0].role : users.receiver[0].role}")'>
          <span class="avatar">
            <img src="${imageSrc}" id="userImage_${rId}" height="42" width="42" alt="" />
          </span>
          <div class="chat-info flex-grow-1">
            <h5 class="mb-0"> ${users.receiver[0]._id == adminID ? users.sender[0].name : users.receiver[0].name} </h5>
            <p class="card-text text-truncate">
              ${users.message}
            </p>
          </div>
          <div class="chat-meta text-nowrap">
            <small class="float-end mb-25 chat-time">${formatTimestamp(users.createdAt)}</small>
            ${users.unread_count != 0 ? `<span id='msgSpan_${rId}' class="badge bg-danger rounded-pill float-end">${users.unread_count}</span>` : ""}
          </div>
        </li>
        `
        chating.appendChild(listitem)
      });

    });

    // On User List click
    const showChats = (sender_id, receiver_id, listUserName, userRole) => {

    let rId = receiver_id == adminID ? sender_id : receiver_id;
    let rRole = userRole;

  // Set the profile image, id, and role
  document.getElementById('userHeaderImg').src = document.getElementById(`userImage_${rId}`).src;
  document.getElementById('userProfileId').value = rId;
  document.getElementById('userProfileRole').value = rRole;

  // Mark the clicked user as active
  let user_li = document.getElementById(`userId_${receiver_id == adminID ? sender_id : receiver_id}`);
  if (user_li) {
    document.querySelectorAll('li.active').forEach(element => {
      element.classList.remove('active');
    });
    user_li.classList.add('active');
  }

  let receiverId = document.getElementById('receiverId');
  receiverId.value = receiver_id == adminID ? sender_id : receiver_id;

  // Hide the start chat screen
  let startChat = document.getElementById('startChat');
  startChat.classList.add('d-none');

  // Set user name in chat header
  let user_name = document.getElementById('userName');
  user_name.innerText = listUserName;

  // Hide unread message badge
  let spanMsg = document.getElementById(`msgSpan_${receiverId.value}`);
  if (spanMsg) {
    spanMsg.style.display = 'none';
  }

  let userChatsDiv = document.getElementById('userChats');
  userChatsDiv.innerHTML = ''; // Clear the current chat window

  // Fetch the chat messages for this user
  socket.emit('get_chat', {
    sender_id,
    receiver_id
  });

  // Mark the chat as read
  socket.emit('read_unread', {
    sender_id,
    receiver_id
  });

  // Listen for the chat data to be returned
  socket.on('chat_data', (messages) => {
    let chatWindow = document.getElementById('chatWindow');
    chatWindow.innerHTML = ''; // Clear current chat

    // Loop through messages and append them to the chat window
    messages.forEach(message => {
      const messageDiv = document.createElement("div");
      messageDiv.classList.add('message');
      messageDiv.innerHTML = `
        <p><strong>${message.sender_name}</strong>: ${message.text}</p>
        <small>${formatTimestamp(message.timestamp)}</small>
      `;
      chatWindow.appendChild(messageDiv);
    });

    // Scroll to the bottom of the chat
    chatWindow.scrollTop = chatWindow.scrollHeight;
  });
}

   
   const sendMsg = () => {
  let receiverId = document.getElementById('receiverId');
  let receiver_id = receiverId.value;

  let msgInput = document.getElementById('chatMsg');
  let msgText = msgInput.value.trim(); // ✨ Trim to remove spaces from start/end

  if (msgText === '') {
    return; // ❌ Prevent sending empty/space-only messages
  }

  socket.emit('send_message', {
    sender_id: adminID,
    receiver_id: receiver_id,
    message: msgText,
    type: 1
  });

  msgInput.value = '';

  socket.emit('get_chat', {
    sender_id: adminID,
    receiver_id: receiver_id,
  });

  socket.emit('chat_list', {
    sender_id: adminID
  });

  $('.user-chats').scrollTop($('.user-chats > .chats').height());
}

    // user chat 
    socket.on('my_chat', (data) => {
  var userChatsDiv = document.getElementById('userChats');

  // Loop through chat data and append new chat messages
  data.forEach(d => {
    var chatMsg = document.createElement('div');

    if (adminID == d.sender_id) {
      chatMsg.innerHTML = `
        <div class="chat" id="chatRight">
          <div class="chat-avatar">
            <span class="avatar box-shadow-1 cursor-pointer">
              <img src="<%=session.image%>" alt="avatar" height="36" width="36" />
            </span>
          </div>
          <div class="chat-body">
            <div class="chat-content">
              <p>${d.message}</p>
            </div>
          </div>
          <div class="chat-meta text-nowrap">
            <small class="float-end chat-time">${formatTimestamp(d.createdAt)}</small>
          </div>
        </div>
      `;
    } else {
      let userImg = document.getElementById(`userImage_${d.sender_id}`).src;

      chatMsg.innerHTML = `
        <div class="chat chat-left" id="chatLeft">
          <div class="chat-avatar">
            <span class="avatar box-shadow-1 cursor-pointer">
              <img src="${userImg}" alt="avatar" height="36" width="36" />
            </span>
          </div>
          <div class="chat-body">
            <div class="chat-content">
              <p>${d.message}</p>
            </div>
          </div>
          <div class="chat-meta text-nowrap">
            <small class="float-start chat-time">${formatTimestamp(d.createdAt)}</small>
          </div>
        </div>
      `;
    }

    // Append the new chat message
    userChatsDiv.appendChild(chatMsg);
  });

  // Ensure the chat scrolls to the latest message
  $('.user-chats').scrollTop($('.user-chats')[0].scrollHeight);
});


    socket.on('send_message_listener', (data) => {

      userChatsDiv = document.getElementById('userChats');
      chatMsg = document.createElement('div');

      if (data.sender_id != adminID) {
        chatMsg.innerHTML = `  
          <div class="chat chat-left" id="chatLeft">
            <div class="chat-avatar">
              <span class="avatar box-shadow-1 cursor-pointer">
                <img src="" alt="avatar" height="36" width="36" />
              </span>
            </div>
              <div class="chat-body">
                <div class="chat-content">
                  <p>${data.message}</p>
                </div>
              </div>
          </div>
        `
      }
      userChatsDiv.appendChild(chatMsg);

      $('.user-chats').scrollTop($('.user-chats > .chats').height());
    });

    // To convert createdAT  to show the readable real-time 
    function formatTimestamp(timestamp) {
      const date = new Date(timestamp);
      return date.toLocaleTimeString('en-US', {
        hour: 'numeric',
        minute: 'numeric'
      });
    }


    //user redirect to the view profile on the click on profile imkage
    function userRedirect() {
      let rId = document.getElementById('userProfileId').value;
      let rRole = document.getElementById('userProfileRole').value;

      if(rRole == 1){
        window.location.href = `/viewUser/${rId}`;
      }else{
        window.location.href = `/viewSubuser/${rId}`;
      }
    }
    
  </script>

<!-- search user by name -->
<script>
  // Get reference to the search input field
  const searchInput = document.getElementById('search');

  // Listen for input event on the search field
  searchInput.addEventListener('input', function() {
      // Get the search query and convert it to lowercase for case-insensitive comparison
      const query = searchInput.value.toLowerCase();

      // Get all the chat list items (assuming they are inside the 'chating' container)
      const chatItems = document.querySelectorAll('.list-group-item');

      let resultsFound = false;

      // Loop through each chat item
      chatItems.forEach(item => {
          const userName = item.querySelector('.user_name h5').innerText.toLowerCase(); // Get the user name

          // If the user name contains the search query, show the chat, otherwise hide it
          if (userName.includes(query)) {
              item.style.display = ''; // Show the item
              resultsFound = true; // Mark that at least one result was found
          } else {
              item.style.display = 'none'; // Hide the item
          }
      });

      // Check if no results were found
      const noUserMessage = document.getElementById('no-user-message');
      if (!resultsFound) {
          noUserMessage.style.display = 'block'; // Show "No user found" message
      } else {
          noUserMessage.style.display = 'none'; // Hide "No user found" message
      }
  });

  function filterUsers(searchTerm) {
    const chatList = document.getElementById("chatList");
    const noUserMessage = document.getElementById("no-user-message");
    const users = chatList.querySelectorAll("div");
    let hasMatch = false;

    users.forEach(user => {
        const username = user.textContent.toLowerCase();
        if (username.includes(searchTerm.toLowerCase())) {
            user.style.display = "block";
            hasMatch = true;
        } else {
            user.style.display = "none";
        }
    });

    if (hasMatch) {
        chatList.style.display = "block";
        noUserMessage.style.display = "none";
    } else {
        chatList.style.display = "none";
        noUserMessage.style.display = "block";
    }
}


</script>

