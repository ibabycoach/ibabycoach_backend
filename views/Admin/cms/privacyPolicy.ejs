
<%- include('../common/header') %>

<%- include('../common/sidebar') %>


<!-- BEGIN: Content-->
<div class="app-content content ">

  <div class="content-wrapper container-xxl p-0">
  <div class="content-body">
      <section id="multiple-column-form">
        <div class="row">
          <div class="col-md-12 col-12">
            <div class="card-body">
                <section class="section">
                    <div class="section-body">
                      <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> Privacy Policy</h4>
                            <!-- <a href="/" class="btn btn-primary float-right" title="Edit Profile">
                              Back
                            </a> -->
                          </div>
                          
                        <div class="card-body">
                          <form action="/updatecms" method="post" >
                            <div class="form-group row mb-2">
                              <label class="col-form-label text-md-left col-10 col-md-1 col-lg-1">Title </label>
                                <div class="col-sm-12 col-md-12">
                                  <input type="text" name="title" value="<%=policyData.title%>" class="form-control" disabled>
                                </div>
                            </div>
                            <div class="form-group row mb-2">
                              <label class="col-form-label col-12 col-md-3 col-lg-3">Description</label>
                                <div class="col-sm-12 col-md-12">
                                  <textarea class="content" id="content" name="description" class="form-control"
                                    required> <%=policyData.description%> </textarea> 
                                      <input type="hidden" name="id" value="<%=policyData.id%>"> <br>
                                        <button type="submit" class="btn btn-primary">Submit <i class="icon-arrow-right14 position-right"></i></button>
                                </div>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </section>
            </div>

          </div>
        </div>
      </section>
    </div>
  </div>
</div>
