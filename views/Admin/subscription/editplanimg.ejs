                                                            style="width: 180px; height: 180px; object-fit: cover;" />

                                                        <!-- Custom File Input -->
                                                        <label for="imgInp"
                                                            class="custom-file-upload btn btn-outline-primary btn-sm mt-2">
                                                            Choose Photo
                                                        </label>
                                                        <input onchange="loadFile(event,'output2')" type="file"
                                                            id="imgInp" name="image" accept="image/*" hidden />
                                                    </div>

                                                    <input type="hidden" name="id" value="<%= subsdetail.id %>" />
                                                </div>
                                            </div>

                                            <!-- Description Section -->
                                            <div class="mb-3 row">
                                                <div class="col-md-2 col-12">
                                                    <label class="col-form-label fw-semibold"
                                                        for="editor">Description</label>
                                                </div>
                                                <div class="col-md-10 col-12">
                                                    <textarea class="form-control" id="editor" name="description"
                                                        rows="5"
                                                        placeholder="Enter description..."><%- subsdetail.description || '' %></textarea>
                                                </div>
                                            </div>

                                            <!-- Submit Button -->
                                            <div class="row">
                                                <div class="col-md-10 offset-md-2 col-12 text-center text-md-start">
                                                    <button type="submit"
                                                        class="btn btn-primary px-4 waves-effect waves-float waves-light">
                                                        Update
                                                    </button>
                                                    <!-- Uncomment if needed -->
                                                    <!-- <a href="/subscriptionList" class="btn btn-secondary ms-2">Back</a> -->
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
