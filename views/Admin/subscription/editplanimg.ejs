        <!-- BEGIN: Content-->
        <div class="app-content content ">

            <div class="content-wrapper container-xxl p-0">
                <div class="content-body">
                    <section id="multiple-column-form">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-12 ">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title"> edit plan image</h4>
                                    </div>
                                    <br>
                                    <div class="card-body">
                                        <form class="form form-vertical" id="add_validator" action="/updateplanimage"
                                            method="POST" enctype="multipart/form-data">
                                            <!-- Image Upload Section -->
                                            <div class="mb-3 row align-items-center">
                                                <div class="col-md-2 col-12">
                                                    <label class="col-form-label fw-semibold" for="imgInp">Image</label>
                                                </div>
                                                <div class="col-md-10 col-12 text-center text-md-start">
                                                    <div class="profile-widget-header position-relative d-inline-block">
