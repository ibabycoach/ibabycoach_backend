            <section id="multiple-column-form">
              <div class="row">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Activity detail</h4>
                  </div>
                  <div class="card-body">
                    <form class="form form-horizontal" action="/updateActivity" method="POST" id="profile"
