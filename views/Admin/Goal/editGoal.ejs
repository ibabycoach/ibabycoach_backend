<%- include('../common/header') %>
  <%- include('../common/sidebar') %>


    <!-- BEGIN: Content-->
    <div class="app-content content ">
      <div class="content-wrapper container-xxl p-0">
        <div class="content-body">
          <section id="multiple-column-form">
            <div class="row justify-content-center">
              <div class="col-md-10 col-12 ">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Update Goal</h4>
                  </div>
                  <br>
                  <div class="card-body">
                    <form class="form form-vertical" id="" action="/updateGole" method="POST"
                      enctype="multipart/form-data">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="profile-widget-header text-center">
                            <img src="<%=Goaldetail.image%>" id="output2" alt="Profile Edit"
                              class="ms-md-0 mx-auto img-thumbnail user_bigimg">
                            <input onchange="loadFile(event,'output2')" type="file" id="imgInp" name="image" />
                          </div>
                        </div>
                        <div class="col-md-8">
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="name">Name</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="name" class="form-control" name="name" value="<%=Goaldetail.name%> ">
                              <input type="hidden" name="id" value="<%=Goaldetail.id%>">
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="price">Title</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="price" class="form-control" name="title"
                                value="<%=Goaldetail.title%> ">
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="name">Day</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="name" class="form-control" name="day" value="<%=Goaldetail.day%> ">
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="tenure">Date</label>
                            </div>
                            <div class="col-sm-10">
                              <input type="text" id="tenure" class="form-control" name="date" value="<%= new Date(Goaldetail.date).toLocaleDateString('en-US', { day: '2-digit', month: 'long', year: 'numeric' }) %>">
                            </div>
                          </div>
                          <div class="mb-1 row">
                            <div class="col-sm-2">
                              <label class="col-form-label new_lable" for="tenure">Description</label>
                            </div>
                            <div class="col-sm-10">
                              <textarea class="form-control" id="content" rows="5" name="description" required> <%=Goaldetail.description%>  </textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="col-sm-9 offset-sm-5">
                          <button type="submit"
                            class="btn btn-primary waves-effect waves-float waves-light">Update</button>
                          <!-- <a href="/subscriptionList" class="btn btn-primary float-right" title="Edit Profile"> Back </a>   -->
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
    <div class="sidenav-overlay"></div>
    <div class="drag-target"></div>
    <%- include('../common/footer') %>