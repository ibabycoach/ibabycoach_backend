<script>
  // JavaScript code to dynamically update age values

  // Function to update max age value display and ensure it's not less than min age
function updateMaxAge() {
    var minAgeInput = document.getElementById("range-1a");
    var maxAgeInput = document.getElementById("range-1b");
    var maxAgeValueSpan = document.getElementById("max_age_value");
    var minAge = parseInt(minAgeInput.value);
    var maxAge = parseInt(maxAgeInput.value);

    // Ensure max age is not less than min age
    if (maxAge < minAge) {
        maxAge = minAge;
        maxAgeInput.value = maxAge;
    }

    if (maxAge < 12) {
        maxAgeValueSpan.textContent = maxAge + " weeks";
    } else if (maxAge >= 12 && maxAge < 52) {
        maxAgeValueSpan.textContent = Math.floor(maxAge / 4) + " months";
    } else {
        maxAgeValueSpan.textContent = Math.floor(maxAge / 52) + " years";
    }
}

// Function to update min age value display and synchronize max age input
function updateMinAge() {
    var minAgeInput = document.getElementById("range-1a");
    var maxAgeInput = document.getElementById("range-1b");
    var minAgeValueSpan = document.getElementById("min_age_value");
    var minAge = parseInt(minAgeInput.value);
    var maxAge = parseInt(maxAgeInput.value);

    // Synchronize max age input with min age input
    if (maxAge < minAge) {
        maxAgeInput.value = minAge;
        updateMaxAge();
    }

    if (minAge < 12) {
        minAgeValueSpan.textContent = minAge + " weeks";
    } else if (minAge >= 12 && minAge < 52) {
        minAgeValueSpan.textContent = Math.floor(minAge / 4) + " months";
    } else {
        minAgeValueSpan.textContent = Math.floor(minAge / 52) + " years";
    }
}

// Add event listeners to range inputs
document.getElementById("range-1a").addEventListener("input", updateMinAge);
document.getElementById("range-1b").addEventListener("input", updateMaxAge);

// Initial update of age values
updateMinAge();
updateMaxAge();

</script>

<script>
  $(document).ready(function () {

    jQuery.validator.addMethod("noSpace", function (value, element) {
      return value == '' || value.trim().length != 0;
    }, "No space allowed");

    $('#profile').validate({
      rules: {
        name: {
          required: true,
          noSpace: true,
          maxlength: 30
        },
        title: {
          required: true,
          noSpace: true,
          maxlength: 15
        },
        min_age_value: {
          required: true,
          noSpace: true,
          
        },

      },

      errorElement: "div",
      errorClass: "jqval-error",
      errorPlacement: function (error, element) {
        error.insertAfter(element);
        error.slideDown(400);
        error.animate({
          opacity: 1
        }, {
          queue: false,
          duration: 700
        });
      },

      submitHandler: function (form) {
        var error = $(".assign_error_div").text();
        if (!error) {
          form.submit();
        }
      }
    });
  });
</script>