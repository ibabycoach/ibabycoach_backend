<script>
// Function to validate numeric input
function validateNumericInput(input) {
  // Allow only digits and one decimal point
  input.value = input.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');
  
  // Reject "0.00" or any similar inputs starting with "0."
  if (input.value === "0.00" || input.value === "0.") {
    input.setCustomValidity("0.00 is not a valid data."); // Custom error message
  } else {
    input.setCustomValidity(""); // Reset validity if the input is valid
  }
}


</script>
