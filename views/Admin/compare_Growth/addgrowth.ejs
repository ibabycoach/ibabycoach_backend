integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" 
crossorigin="anonymous" referrerpolicy="no-referrer">
</script>


<script>
$(document).ready(function() {
  // Add custom method to validate alphanumeric values (letters and numbers only)
  jQuery.validator.addMethod("alphanumeric", function(value, element) {
    return this.optional(element) || /^[a-zA-Z0-9]+$/.test(value);
  }, "Only letters and numbers are allowed, no spaces or special characters.");
  
  // Add method to validate positive numbers greater than or equal to 1
  jQuery.validator.addMethod("greaterThanOrEqualToOne", function(value, element) {
    return parseFloat(value) >= 1;
  }, "Value must be 1 or greater.");
  
  // Add method to check if dropdown has a valid selection
  jQuery.validator.addMethod("validSelection", function(value, element) {
    return value !== "" && value !== null;
  }, "Please select an option.");
  
  // Add method to check if end duration is greater than or equal to start duration
  jQuery.validator.addMethod("endGreaterThanStart", function(value, element) {
    var startDuration = parseInt($("#start_duration").val());
    var endDuration = parseInt(value);
    
    if (isNaN(startDuration) || isNaN(endDuration)) {
      return true; // Skip validation if either value is not a number yet
    }
    
    return endDuration >= startDuration;
  }, "End duration must be greater than or equal to start duration.");
  
  $('#add_validator').validate({
    rules: {
      title: {
        required: true,
        alphanumeric: true, // Only alphabets and numbers, no spaces or special chars
        maxlength: 50
      },
      start_duration: {
        required: true,
        validSelection: true
      },
      end_duration: {
        required: true,
        validSelection: true,
        endGreaterThanStart: true // Apply our new validation rule
      },
      end_duration_type: {
        required: true,
        validSelection: true
      },
      headSize_in_cm: {
        required: true,
        number: true,
        greaterThanOrEqualToOne: true  // Changed to ensure value is >= 1
      },
      height_in_cm: {
        required: true,
        number: true,
        greaterThanOrEqualToOne: true  // Changed to ensure value is >= 1
      },
      weight_in_lbs: {
        required: true,
        number: true,
        greaterThanOrEqualToOne: true  // Changed to ensure value is >= 1
      }
    },
    errorElement: "div",
    errorClass: "jqval-error",
    highlight: function(element, errorClass) {
      $(element).addClass("error");
      $(element).css("border-color", "#ea5455");
    },
    unhighlight: function(element, errorClass) {
      $(element).removeClass("error");
      $(element).css("border-color", "");
    },
    errorPlacement: function(error, element) {
      error.insertAfter(element);
      error.slideDown(400);
      error.animate({
        opacity: 1
      }, {
        queue: false,
        duration: 700
      });
    },
    messages: {
      title: {
        required: "This field is required.",
        alphanumeric: "Only letters and numbers are allowed. No spaces or special characters."
      },
      start_duration: {
        required: "Please select a start duration."
      },
      end_duration: {
        required: "Please select an end duration.",
        endGreaterThanStart: "End duration must be greater than or equal to start duration."
      },
      end_duration_type: {
        required: "Please select a duration type."
      },
      headSize_in_cm: {
        required: "This field is required.",
        number: "Please enter a valid number.",
        greaterThanOrEqualToOne: "Value must be 1 or greater."
      },
      height_in_cm: {
        required: "This field is required.",
        number: "Please enter a valid number.",
        greaterThanOrEqualToOne: "Value must be 1 or greater."
      },
      weight_in_lbs: {
        required: "This field is required.",
        number: "Please enter a valid number.",
        greaterThanOrEqualToOne: "Value must be 1 or greater."
      }
    },
    submitHandler: function(form) {
      var error = $(".assign_error_div").text();
      if (!error) {
        form.submit();
      }
    }
  });
  
  // Add real-time validation for duration fields
  $("#start_duration, #end_duration").on("change", function() {
    // Only validate if both fields have values
    if ($("#start_duration").val() && $("#end_duration").val()) {
      $("#end_duration").valid(); // Trigger validation on end duration
    }
  });
});

// Improved function to validate numeric input - ensure values are >= 1
function validateNumericInput(input) {
  // Allow only digits and one decimal point
  input.value = input.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');
  
  // Reject values < 1
  const numValue = parseFloat(input.value);
  if (isNaN(numValue) || numValue < 1) {
    input.setCustomValidity("Please enter a value of 1 or greater");
    
    // Add visual indication of error
    input.style.borderColor = "#ea5455";
    
    // If there's no error message yet, add one
    let nextElement = input.nextElementSibling;
    if (!nextElement || !nextElement.classList.contains('jqval-error')) {
      let errorDiv = document.createElement('div');
      errorDiv.className = 'jqval-error';
      errorDiv.textContent = "Value must be 1 or greater";
      errorDiv.style.display = "block";
      errorDiv.style.color = "#ea5455";
      errorDiv.style.fontSize = "0.875rem";
      errorDiv.style.marginTop = "5px";
      input.parentNode.insertBefore(errorDiv, input.nextSibling);
    }
  } else {
    input.setCustomValidity(""); // Reset validity if the input is valid
    input.style.borderColor = ""; // Reset border color
    
    // Remove error message if it exists
    let nextElement = input.nextElementSibling;
    if (nextElement && nextElement.classList.contains('jqval-error')) {
      nextElement.remove();
    }
  }
}
  </script>

