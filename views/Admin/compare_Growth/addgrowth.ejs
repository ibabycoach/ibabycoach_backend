<script>
  $(document).ready(function() {
    jQuery.validator.addMethod("onlyAlphabets", function(value, element) {
      return /^[a-zA-Z\s]*$/.test(value);  // Only alphabets and spaces allowed
    }, "Only alphabets and spaces are allowed.");
  
    $('#add_validator').validate({
      rules: {
        title: {
          required: true,  // Title is required
          onlyAlphabets: true,  // Apply custom validation for alphabets only
          maxlength: 50
        },
        headSize_in_cm: {
          required: true,
          noSpace: true,
        },
        height_in_cm: {
          required: true,
          noSpace: true,
        },
        weight_in_lbs: {
          required: true,
          noSpace: true,
        }
      },
      errorElement: "div",
      errorClass: "jqval-error",
      errorPlacement: function(error, element) {
        error.insertAfter(element);  // Insert error message after the element
        error.slideDown(400);
        error.animate({
          opacity: 1
        }, {
          queue: false,
          duration: 700
        });
      },
      messages: {
        title: {
          required: "This field is required.",
          onlyAlphabets: "Only alphabets and spaces are allowed."  // Custom message for invalid characters
        },
        headSize_in_cm: {
          required: "This field is required."
        },
        height_in_cm: {
          required: "This field is required."
        },
        weight_in_lbs: {
          required: "This field is required."
        }
      },
      submitHandler: function(form) {
        var error = $(".assign_error_div").text();
        if (!error) {
          form.submit();  // Submit the form if no validation errors
        }
      }
    });
  });
  
  
  </script>


